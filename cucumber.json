{
    "default": {
        "paths": [
            "src/test/features/*.feature"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "require": [
            "src/hooks/hooks.ts",
            "src/hooks/*.ts",
            "src/test/steps/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "dryRun": false,
        "parallel": 2,
        "format": ["progress-bar",
        "html:test-results/cucumber-report.html"]
      
    }
}